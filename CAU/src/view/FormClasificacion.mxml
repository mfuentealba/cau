<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="100%">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import model.ModelApp;
			private var modelApp:ModelApp = ModelApp.getInstance();
		]]>
	</fx:Script>
	<s:HGroup>
		<s:Form defaultButton="{btnEnviar}">
			<s:FormItem label="Id">
				<s:Label id="idLbl" />
			</s:FormItem>
			<s:FormItem label="Nombre">
				<s:TextInput id="txtNombre"/>
			</s:FormItem>
			<s:Button id="btnEnviar" />
			<s:Button id="btnNuevo" label="Nueva Sucursal"/>
			<s:Button id="btnEliminar" label="Eliminar"/>
			
		</s:Form>
		<s:VGroup>
			<s:Label text="Clasificación"/>
			<s:DataGrid id="dgClasificacion" dataProvider="{modelApp.arrClasificacion}"/>
		</s:VGroup>
		<s:VGroup>
			<s:Label text="Categorías incluidas"/>
			<s:DataGrid id="dgCategorias" dataProvider="{modelApp.arrClasificacion}"/>
			<mx:LinkButton label="Agregar Categorias"/>
		</s:VGroup>
		
		
	</s:HGroup>
</s:Group>
