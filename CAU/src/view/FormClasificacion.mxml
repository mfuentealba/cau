<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="100%">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import controller.Controller;
			
			import event.MantenedoresEvent;
			
			import model.ModelApp;
			
			import spark.events.GridEvent;
			[Bindable] private var modelApp:ModelApp = ModelApp.getInstance();
			
			protected function fnBuscarCategoriasAsociadas(evento:GridEvent):void
			{
				// TODO Auto-generated method stub
				if(evento.rowIndex > -1){
					var manEvent:MantenedoresEvent = new MantenedoresEvent(MantenedoresEvent.BUSCA_CATEGORIAS_ASOCIADAS, null, dgClasificacion.selectedItem);
					Controller.getInstance().dispatchEvent(manEvent);
				}
				
			}
			
		]]>
	</fx:Script>
	<s:HGroup>
		<s:Form defaultButton="{btnEnviar}">
			<s:FormItem label="Id">
				<s:Label id="idLbl" />
			</s:FormItem>
			<s:FormItem label="Nombre">
				<s:TextInput id="txtNombre"/>
			</s:FormItem>
			<s:Button id="btnEnviar" />
			<s:Button id="btnNuevo" label="Nueva Sucursal"/>
			<s:Button id="btnEliminar" label="Eliminar"/>
			
		</s:Form>
		<s:VGroup>
			<s:Label text="Clasificación"/>
			<s:DataGrid id="dgClasificacion" dataProvider="{modelApp.arrClasificacion}" gridClick="fnBuscarCategoriasAsociadas(event)"/>
		</s:VGroup>
		<s:VGroup>
			<s:Label text="Categorías incluidas"/>
			<s:List id="lstCategorias" dataProvider="{dgClasificacion.selectedItem.arrCategorias}"/>
			<mx:LinkButton label="Agregar Categorias"/>
		</s:VGroup>
		
		
	</s:HGroup>
</s:Group>
